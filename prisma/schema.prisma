generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  age   Int
  name  String
  email String @unique
  role  Role   @default(BASIC)

  @@unique([age, name])
  @@index([email])
}

