model Category {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  createdAt   DateTime  @default(now())
  description String?
  products    Product[]
}

model Product {
  id                String   @id @default(uuid())
  name              String
  sku               String   @unique
  productsummary    String?
  price             Float
  createdAt         DateTime @default(now())
  description       String?
  productgallery    String
  productcategory   Category @relation(fields: [productcategoryId], references: [id])
  productcategoryId String
}

model Coupons {
  id        String   @id @default(uuid())
  percent   Int
  currency  Int
  createdAt DateTime @default(now())
}

model Setting {
  id          String   @id @default(uuid())
  name        String
  displayname String
  email       String
  role        String
  address     String
  bio         String
  createdAt   DateTime @default(now())
}

enum Role {
  BASIC
  EDITOR
  ADMIN
}
